# General
NODE_ENV=development
PORT=4000
INTERNAL_API_URL=http://localhost:4000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Auth
BETTER_AUTH_SECRET=your_secret_here
BETTER_AUTH_BASE_URL=http://localhost:4000/api/auth
SERVICE_JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
COOKIE_DOMAIN=localhost
AUTH_SOCIAL_PROMPT=select_account

# Social Providers
GOOGLE_CLIENT_ID=your_google_id
GOOGLE_CLIENT_SECRET=your_google_secret

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=onboarding@resend.dev

# Security & Bot Protection (Arcjet)
ARCJET_KEY=your_arcjet_key
ARCJET_BOT_MODE=LIVE
ARCJET_RATE_LIMIT_MODE=LIVE

# Redis & Cache
REDIS_URL=redis://localhost:6379
SESSION_CACHE_PREFIX=session_cache:
SESSION_DB_PREFIX=session:
CACHE_TTL_SECONDS=3600

# Observability (OpenTelemetry)
OTEL_PROMETHEUS_PORT=9464
OTEL_SERVICE_NAME=auth-service
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
